<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net6.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
	<GenerateDocumentationFile>True</GenerateDocumentationFile>
  </PropertyGroup>

	<PropertyGroup>
		<VersionPrefix>1.2.0</VersionPrefix>
		<Description>An option type for C# aiming to be explicit while concise.</Description>
		<PackageProjectUrl>https://orxfun.github.io/orx-fun-option/</PackageProjectUrl>
		<RepositoryUrl>https://github.com/orxfun/orx-fun-option</RepositoryUrl>
		<Authors>ugur-arikan</Authors>
		<PackageTags>option;maybe;functional;railway-oriented;monad;fluent</PackageTags>
		<PackageLicenseExpression>MIT</PackageLicenseExpression>
		<PackageReadmeFile>README.md</PackageReadmeFile>
	</PropertyGroup>

	<ItemGroup>
		<None Include="..\..\README.md">
			<Pack>True</Pack>
			<PackagePath>\</PackagePath>
		</None>
	</ItemGroup>

</Project>
